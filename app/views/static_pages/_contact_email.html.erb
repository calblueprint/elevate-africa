<%= form_tag(contact_email_path) do %>
    <%= text_field_tag("contact_first", nil, :class => "contact-name contact-text", :placeholder => "First Name") %>
    <%= text_field_tag("contact_last", nil, :class => "contact-name contact-text", :placeholder => "Last Name") %>
    <%= text_field_tag("contact_email_address", nil, :class => "contact-textbox contact-text", :placeholder => "Email") %>
    <%= text_field_tag("contact_subject", nil, :class => "contact-textbox contact-text", :placeholder => "Subject") %>
    <%= text_area_tag("contact_message", nil, :class => "contact-text", :placeholder => "Message") %>
    <%= submit_tag("Submit", :class => "button", :id => "contact-button") %>
    <% end %>