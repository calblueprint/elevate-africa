<div id="general-donation-container">
  <div id="general-donation-image-container"></div>
  <div id="general-donation-content-container">
    <h1 id="general-donation-headline">Help Break the Cycle of Poverty!</h1>
    <div id="general-donation-form">

      <div id="general-donation-donate-range">
        <div class="general-donation-range-container">
          <h2 class="general-donation-range-head">Major Impact</h2>
          <h2 class="general-donation-range-range">$1000+</h2>
        </div>
        <div class="general-donation-range-container">
          <h2 class="general-donation-range-head">Fund a Business</h2>
          <h2 class="general-donation-range-range">$500 - $1000</h2>
        </div>
        <div class="general-donation-range-container">
          <h2 class="general-donation-range-head">Technology</h2>
          <h2 class="general-donation-range-range">$250 - $500</h2>
        </div>
        <div class="general-donation-range-container">
          <h2 class="general-donation-range-head">Training</h2>
          <h2 class="general-donation-range-range">$10 - $250</h2>
        </div>
      </div>

      <div id="general-donation-donate-info">
        <div class="general-donation-position">
          <div id="general-donation-donate-description">
            <p>
              Help aspiring entrepreneurs take
              the first step to overcoming poverty with a multi-week business training program that teaches them how to start and manage a business, evaluate opportunities and risks, create product differentiation, manage profits, and invest savings.
            </p>
          </div>
          <div id="general-donation-donate-image" style="background-image: url(<%= asset_path("buzz.JPG") %>)">
          </div>
        </div>
      </div>

      <div id="general-donation-donate-container">
        <div class="general-donation-position">
          <h4 id="general-donation-subtitle">I WILL GIVE</h4>
          <div id="general-donation-amount-container">
            <div id="general-donation-dollar-sign">$</div>
            <%= text_field_tag :amount, "5", id: "donate-amount-text", class: "donate-amount"%>
          </div>
          <div id="donate-button-container">
            <%= link_to "Donate!", "#stripe", id: "donate-modal-button", class: "button" %>
          </div>
          <h1 id="donate-info-container">
            <%= link_to "Check?", "#check-info", id: "donate-info-button" %>
          </h1>
        </div>
      </div>
      <div id="general-donation-slider"></div>
    </div>
  </div>
</div>
