<%= simple_form_for @campaign do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being edited: </h2>
      <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.input :name, input_html: { value: "Kevin Wu" } %>
  </p>

  <p>
    <%= f.input :goal, as: :string, input_html: { value: "$1000.00" } %>
  </p>

  <p>
    <%= f.input :description, input_html: { value: "My campaign!" } %>
  </p>

  <p>
    <%= f.input :deadline, as: :string, input_html: { value: "30 days" } %>
  </p>

  <p>
    <%= f.hidden_field :team_id, value: current_user.id %>
  </p>

  <%= f.submit 'CONTINUE', class: "campaigns-create-button" %>
<% end %>
