<div class="wide-container">
  <div id="campaign-index-slider">
    <ul class="bxslider">
      <li id="slide">
        <!-- <%= image_tag("buzz.JPG") %> -->
      </li>
      <li id="slide">
        <!-- <%= image_tag("buzz.JPG") %> -->
      </li>
      <li id="slide">
        <!-- <%= image_tag("buzz.JPG") %> -->
      </li>
    </ul>
  </div>
  <div class="wide-container">
    <h1 id="campaign-index-header">All Campaigns</h1>
    <div id="campaign-index-campaigns">
      <% @campaigns.each do |campaign| %>
        <%= link_to campaign_path(campaign) do %>
          <div class="campaign-index-view">
            <div class="campaign-index-content-container">
              <% if !campaign.picture_url.nil? %>
                <div style="background-image: url(<%=campaign.picture_url%>)" class="campaign-index-image"></div>
              <% else %>
                <div class="campaign-index-image default"></div>
              <% end %>
              <h2 class="campaign-index-title"><%= campaign.name %></h2>
              <h4><%= campaign.description %></h4>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="campaign-go-to">
      <% if can_create_campaign? current_user %>
        <%= link_to "new campaign?", new_campaign_path, class: 'button' %>
      <% else %>
        <% if has_campaign? current_user %>
          <%= link_to "Go to campaign!", campaign_path(current_user.campaign), class: 'button' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
