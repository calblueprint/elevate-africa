<div class="medium-container">
  <%= form_for :campaign, url: campaigns_path do |f| %>
  <p>
	  <%= f.label :name %><br>
	  <%= f.text_field :text %>
  </p>

  <p>
    <%= f.label :goal %><br>
	  <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :deadline %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
</div>