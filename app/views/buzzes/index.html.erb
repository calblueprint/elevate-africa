<div class="wide-container" id="buzz-banner">
  <div id="buzz-black-cover">
    <div id="buzz-title-container">
      <h1 id="buzz-title">HELLA BUZZ YO</h1>
      <h2 id="buzz-button">Check it out!</h2>
    </div>
  </div>
</div>

<div id="buzz-headline-container">
  <% if valid_admin? %>
    <i><%= link_to "", new_buzz_path, class: "fa fa-plus-square fa-5x" , id: "buzz-create-button" %></i>
  <% end %>
  <h2 id="buzz-headline">What We're Up To</h2>
</div>

<% @buzzes.each do |buzz| %>
  <div class="buzz-small-box">
    <%= image_tag(buzz.picture_url, class: 'buzz-image') if buzz.picture? %>
  </div>
<% end %>
