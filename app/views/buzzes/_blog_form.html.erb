<div class="small-container">
  <%= simple_form_for buzz do |f| %>
    <%= f.input :headline, label: false, placeholder: 'Headline' %>
    <%= f.input :subhead, label: false, placeholder: 'Subhead' %>
    <%= f.input :content, label: false, placeholder: 'Your content here...' %>
    <%= f.input :video_link, label: false, placeholder: "Embed Youtube Video (optional)" %>
    <%= f.hidden_field :admin_id, value: current_user.id %>
    <!-- Add Image here! -->
    <%= f.file_field :picture, label: "Attach a photo!" %>
    </br>
    <%= f.label :box_size %>
    <%= f.select :box_size, Buzz::BOX_SIZE_SELECT %>
    <%= f.label :box_color, "Tag" %>
    <%= f.select :box_color, Buzz::BOX_COLORS %>
    </br>
    <%= f.submit "Submit Buzz!" %>
  <% end %>
</div>
