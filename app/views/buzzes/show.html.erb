<div style="background-image: url(<%= @buzz.picture_url %>)" wide-container id="buzz-show-banner">
  <div id="buzz-black-cover">
    <div id="buzz-show-title-container">
      <h1 id="buzz-show-headline"><%= @buzz.headline %></h1>
      <h2 id="buzz-show-subhead"><%= @buzz.subhead %></h2>
    </div>
  </div>
</div>

<% if current_user && current_user.is_admin? %>
  <%= link_to "Edit Buzz", edit_buzz_path(@buzz) %>
  <%= link_to "Delete Buzz", buzz_path(@buzz),
                               method: :delete,
                               data: { confirm: "Are you sure you want to this? The buzz cannot be recovered" } %>
<% end %>
<div id="buzz-show-content-container">
  <p id="buzz-show-content"><%= @buzz.content %></p>
</div>
