<div class="medium-container padding">
  <h1>User Dashboard</h1>
  <% if current_user && @user == current_user %>
    <%= link_to "Edit Profile", edit_user_path(@user), class: "button" %>
    <%= link_to "Log Out", destroy_user_session_path,
                              method: :delete,
                              class: "button" %>
  <% end %>
  <% if @campaign %>
    <% if @campaign.blank? %>
      <%= link_to "Start a new campaign!", new_campaign_path, class: 'button' %>
    <% else %>
      <%= link_to "Check out your campaign!", campaign_path(@campaign), class: 'button' %>
    <% end %>
  <% end %>
</div>

